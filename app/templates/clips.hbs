<h2>List of audio</h2>

{{input type="search" value=searchTerm placeholder="Filter audio"}}<br />

<ul class='item-list'>

{{#if filteredClips}}
	{{#each clip in filteredClips}}
		{{render 'short-clip' clip}}
	{{/each}}
{{ else }}
	{{#each clip in pagedContent}}
		{{render 'short-clip' clip}}
	{{/each}}
{{/if}}

{{#if showPaging}}
	{{#if pagedContent}}
		{{page-numbers content=pagedContent}}
	{{/if}}
{{/if}}

</ul>