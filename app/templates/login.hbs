
<h1>Log In</h1>

<section>

<form {{action 'authenticate' on='submit'}}>

    {{#if errorMessage}}
        <div class="alert alert-danger" role="alert">{{errorMessage}}</div>
    {{/if}}

    {{#if flashMessage}}
        <div class="alert alert-info" role="alert">{{flashMessage}}</div>
    {{/if}}

    <div class="form-group">
        <label for="identification">Username or email address</label>
        {{input value=identification placeholder='Enter Login' class="form-control input-lg"}}
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        {{input value=password placeholder='Enter Password' type='password' class="form-control input-lg"}} 
    </div>

    <button type="submit" class="btn btn-primary">Login</button> &nbsp; <a {{bind-attr href='config.env.accountsSignup'}}  target='_blank' class='btn'>Sign up</a>
</form>

</section>