
<h1>Log In</h1>

<section>

<form {{action 'authenticate' on='submit'}}>

    <div class="form-group">
        <label for="identification">Username or email address</label>
        {{input value=identification placeholder='Enter Login' class="form-control input-lg"}}
        <p class="help-block">Hint:<em> user@mpr.org</em></p>
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        {{input value=password placeholder='Enter Password' type='password' class="form-control input-lg"}} 
            <p class="help-block">Hint:<em> topsecret</em></p>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>

</section>