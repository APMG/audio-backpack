<li class='item'>    
      <a class='item-icon clickable playlist' href="#" {{action 'playAll'}}> </a>
      <div class='item-info' {{action 'goToList' list on='click' bubbles=false}}>
          {{#link-to 'lists.list' list}} 
        <h3>{{list.title}}</h3>
        <span class='author'>by {{!#link-to 'user' user}}{{list.user.full_name}}{{!/link-to}}</span><br />
        {{clipCount}} clips, {{pretty-duration totalDuration}}
         {{/link-to}}

        {{#if isCurrentUserOwner}}
            &nbsp; <a class="clickable remove-list" data-toggle="modal" {{action 'openModal' 'modals/delete-list' model bubbles=false}}><i class="icon-trash" aria-hidden="true"></i></a>
        {{/if}}
    </div>
</li>