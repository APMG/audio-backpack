<section class='index'>
    <h2>Featured Playlists</h2>

    <ul class='item-list'>
        {{#each list in trimmedLists}}
            {{render 'lists/list' list}}
        {{/each}}
    </ul>

    <div class='btn-wrap'>
        {{#link-to 'lists'}}<span>All Playlists</span> &rarr;{{/link-to}} {{!  class="btn btn-primary"  }}
    </div>
</section>

<section class='index'>
    <h2>Latest Clips</h2>

    <ul class='item-list'>
        {{#each clip in trimmedClips}}
            {{render 'short-clip' clip}}
        {{/each}}
    </ul>

    <div class='btn-wrap'>
        {{#link-to 'clips' }}<span>Browse all clips</span> &rarr;{{/link-to}} {{! class="btn btn-primary" }}
    </div>
</section>
