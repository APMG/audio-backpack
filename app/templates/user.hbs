
<section class='user-header'>
    {{gravatar-image hash=model.gravatar size='200' class=''}}  
    <h1>{{model.full_name}}</h1>
</section>

{{#if isLoggedInUser}}
    <a class="btn btn-primary" data-toggle="modal" {{action 'openModal' 'modals/create-playlist'}}>Create new playlist</a><br />
{{/if}}

<section>
    <h2>{{ownerApos}} Playlists</h2>

    <ul class='item-list'>
    {{#each playlist in playlists}}
        {{render 'playlist' playlist}}
    {{/each}}
    </ul>
</section>