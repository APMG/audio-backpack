
<section {{bind-attr class=":user-header isLoggedInUser"}}>
    {{gravatar-image hash=model.gravatar size='200' class=''}}  
    <h1>{{model.full_name}}</h1>

    {{#if isLoggedInUser}}
        {{#if session.isAuthenticated}}     
          <a {{ action 'invalidateSession' }} class='btn btn-primary'>Sign out</a>
        {{/if}}
    {{/if}}
  

</section>

<section class='playlist-index-header'>
           <h2>{{ownerApos}} Playlists</h2>

      {{#if isLoggedInUser}}
        <a class="btn btn-primary" data-toggle="modal" {{action 'openModal' 'modals/create-playlist'}}>Create new playlist</a>
    {{/if}}
</section>



<section>
    <ul class='item-list'>
    {{#each playlist in playlists}}
        {{render 'playlist' playlist}}
    {{/each}}
    </ul>
</section>